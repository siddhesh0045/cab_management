<!DOCTYPE html>
<html lang="en">
<head>
    <title>Drivers List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #e4eaed;
        }

        h1 {
            margin-top: 2%;
            padding: 3%;
            text-align: center;
            color: #ffffff;
            background-color: #263238;
            box-shadow: 10px 10px 30px grey;
        }
       

        table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 20px;
            box-shadow: 10px 10px 30px grey;
        }

        th, td {
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #333;
            color: #fff;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #d3f0ff;
        }

        button {
            padding: 5px 10px;
            background-color: #333;
            color: #fff;
            border: none;
            cursor: pointer;
        }

       
    </style>
</head>
<body>
    <!-- this is view dirver -->
    <h1>Registered Information</h1>
    <table border="1">
        <tr >
            <th>ID</th>
            <th>Name</th>
            <th>License</th>
            <th>Language</th>
            <th>Available</th>
        </tr>

        <% for(var i=0;i<students.length;i++){ %>
        <tr>
            <td><%- students[i].id %></td>
            <td><%- students[i].dr_name %></td>
            <td><%- students[i].licence %></td>
            <td><%- students[i].lan %></td>
            <td><%- students[i].present %></td>
            
        </tr>
        <% } %>
    </table>
</body>
</html>
